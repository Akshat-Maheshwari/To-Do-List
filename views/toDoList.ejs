<%- include("header") -%>
    <div class="box" id="heading">
      <h1><%=title%></h1>
    </div>

    <div class="box">
      <%list.forEach((item)=>{%>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
            <input type="hidden" name="listOf" value="<%=title%>"></input>
            <p><%=item.name%></p>
          </div>
        </form>

      <%})%>
      <form class="item" action="/" method="post">
        <input type="text" name="addItem" placeholder="Add an Item" autocomplete="off">
        <button type="submit" name="listOf" value=<%=title%> >+</button>
      </form>
    </div>
<%- include("footer") -%>
